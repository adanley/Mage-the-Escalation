float m_shieldRegen;
bool m_shieldsUp = false */ Ships will not regenerate while shields are up, so
                            they will instantiate with shields down. /*
float m_shieldResist;
float m_Hull;
float m_remHull;
float m_armor;
float m_thrust;  //Base thrust to be referenced at start of round
float m_remThrust;
float m_maneuver;
